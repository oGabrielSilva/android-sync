<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Sync" parent="Theme.AppCompat.DayNight.NoActionBar">
         <item name="colorPrimary">@color/primary</item>
         <item name="colorPrimaryVariant">@color/secondary</item>
         <item name="android:windowBackground">@color/primary</item>
         <item name="android:textColor">@color/text</item>
         <item name="android:textColorHint">@color/textPlaceholder</item>
         <item name="android:windowLightNavigationBar">false</item>
         <item name="android:navigationBarColor">@color/primary</item>
         <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.Sync" parent="Base.Theme.Sync" />
    <style name="ButtonTheme">
        <item name="android:background">@drawable/auth_button_template</item>
        <item name="android:textColor">@color/text</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>